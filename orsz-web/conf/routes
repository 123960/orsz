# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.SuggestionController.index
GET     /orsz                       controllers.SuggestionController.index

GET     /orsz/suggestions           controllers.SuggestionController.suggestions
GET     /orsz/suggestion/:id        controllers.SuggestionController.suggestion(id: String)
PUT     /orsz/suggestion/:id        controllers.SuggestionController.saveSuggestion(id: String)
POST    /orsz/suggestion/:id        controllers.SuggestionController.saveSuggestion(id: String)
DELETE  /orsz/suggestion/:id        controllers.SuggestionController.removeSuggestion(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
